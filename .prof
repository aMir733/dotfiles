## PATHS

# Default Path
export PATH=/usr/sbin:/sbin:/usr/local/bin:/usr/bin:/bin:/usr/games

# Bins
export PATH=$HOME/bin:$HOME/.local/bin:$PATH

# Brew
export PATH=$PATH:/home/linuxbrew/.linuxbrew/bin

# Rust and Cargo
export PATH=$PATH:$HOME/.cargo/bin

# Go
export GOPATH=$HOME/.local/go
export PATH=$PATH:$HOME/.local/go/bin

# SDK - Android studio - Emulator - Platform-tools
export PATH=$PATH:$HOME/Android/Sdk/cmdline-tools/latest/bin:$HOME/Android/Sdk/cmdline-tools/tools/bin:$HOME/Android/Sdk/emulator:$HOME/Android/Sdk/tools:$HOME/Android/Sdk/tools/bin:$HOME/Android/Sdk/platform-tools

# No GPU
export PATH=$HOME/nogpu:$PATH

# pyenv
export PATH=$PATH:$HOME/.pyenv/bin
export PATH=$PATH:$HOME/.pyenv/shims


## ALIASES

# ls
alias l='ls -lah'
# batcat
alias c='bat --paging=never -p'
# Python server
alias pyserver='python3 -m http.server'
# Run with nvidia
alias usegpu='__NV_PRIME_RENDER_OFFLOAD=1 __GLX_VENDOR_LIBRARY_NAME=nvidia'
# No nvidia
alias nogpu='__NV_PRIME_RENDER_OFFLOAD=0 __GLX_VENDOR_LIBRARY_NAME=intel'
# Pipe into clipboard
alias clip='perl -pe "chomp if eof" | xclip -selection c'



## Env

# set nvim as default editor
export EDITOR=/usr/bin/nvim

# KDE apps not following the system's theme rules
export QT_QPA_PLATFORMTHEME=gtk2
