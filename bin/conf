#!/bin/bash

case $1 in
	i3)
		nvim $HOME/.config/i3/config -c 'set filetype=sh'
		exit
		;;
	picom)
		nvim $HOME/.config/picom/picom.conf
		exit
		;;
	polybar)
		nvim $HOME/.config/polybar/config -c 'set filetype=dosini'
		exit
		;;
	kitty)
		nvim $HOME/.config/kitty/kitty.conf
		exit
		;;
	nvim)
		nvim $HOME/.config/nvim/init.vim
		exit
		;;
	startup)
		nvim $HOME/.startup.sh
		exit
		;;
	rofi)
		nvim $HOME/.config/rofi/config.rasi
		exit
		;;
	conf)
		nvim $HOME/bin/conf
		exit
		;;
	dunst)
		nvim $HOME/.config/dunst/dunstrc -c 'set filetype=cfg'
		exit
		;;
	prof)
		nvim $HOME/.prof
		exit
		;;
	mpv)
		nvim $HOME/.config/mpv/mpv.conf
		exit
		;;
	mpv-input)
		nvim $HOME/.config/mpv/input.conf
		exit
		;;
	zsh)
		nvim $HOME/.zshrc
		exit
		;;
	*)
		echo "Invalid Input. Usage: conf [i3,picom,polybar]"
		exit
		;;
esac
